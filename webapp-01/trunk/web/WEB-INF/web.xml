    <servlet>
        <servlet-name>InitLog4J</servlet-name>
        <servlet-class>co.uk.genonline.simpleweb.web.InitLogging</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
-->
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>co.uk.genonline.simpleweb.web.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/editIndex</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/Controller.do</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>
            co.uk.genonline.simpleweb.web.ContextListener
        </listener-class>
    </listener>
</web-app>
