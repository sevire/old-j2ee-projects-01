    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_webapp.xml"/>
  
  <import file="${basedir}/webapp/co/uk/genonline/simpleweb/webtest/module_webtest.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.webapp, clean.module.webtest, clean.artifact.lda-exp" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.webapp, compile.module.webtest" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.lda-exp" value="${basedir}/out/artifacts/lda_exp"/>
    <property name="artifact.output.lda-war" value="${basedir}/../../../../usr/local/apache-tomcat-7.0.42/webapps"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.lda##010.war" value="${artifacts.temp.dir}/lda##010.war"/>
  </target>
  
  <target name="clean.artifact.lda-exp" description="clean lda-exp artifact output">
    <delete dir="${artifact.output.lda-exp}"/>
  </target>
  
  <target name="artifact.lda-exp" depends="init.artifacts, compile.module.webapp" description="Build &#39;lda-exp&#39; artifact">
    <mkdir dir="${artifact.output.lda-exp}"/>
    <mkdir dir="${artifact.output.lda-exp}/WEB-INF"/>
    <mkdir dir="${artifact.output.lda-exp}/WEB-INF/classes"/>
    <copy todir="${artifact.output.lda-exp}/WEB-INF/classes">
      <fileset dir="${webapp.output.dir}"/>
    </copy>
    <mkdir dir="${artifact.output.lda-exp}/WEB-INF/lib"/>
    <copy file="${basedir}/../../Downloads/markdownj-1.0.2b4-0.3.0.jar" tofile="${artifact.output.lda-exp}/WEB-INF/lib/markdownj-1.0.2b4-0.3.0.jar"/>
    <copy file="${basedir}/../../Downloads/apache-log4j-1-1.2.17/log4j-1.2.17.jar" tofile="${artifact.output.lda-exp}/WEB-INF/lib/log4j-1.2.17.jar"/>
    <copy file="${basedir}/../../Downloads/commons-beanutils-1.8.3/commons-beanutils-1.8.3.jar" tofile="${artifact.output.lda-exp}/WEB-INF/lib/commons-beanutils-1.8.3.jar"/>
    <copy file="${basedir}/../../Downloads/commons-io-2-1.4/commons-io-2.4.jar" tofile="${artifact.output.lda-exp}/WEB-INF/lib/commons-io-2.4.jar"/>
    <copy file="${basedir}/../../Downloads/mysql-connector-java-5-1.1.26/mysql-connector-java-5.1.26-bin.jar" tofile="${artifact.output.lda-exp}/WEB-INF/lib/mysql-connector-java-5.1.26-bin.jar"/>
    <copy file="${basedir}/../../Downloads/commons-logging-1.1.3/commons-logging-1.1.3.jar" tofile="${artifact.output.lda-exp}/WEB-INF/lib/commons-logging-1.1.3.jar"/>
    <copy file="${basedir}/../../Downloads/javax.servlet.jsp.jstl-1.2.1.jar" tofile="${artifact.output.lda-exp}/WEB-INF/lib/javax.servlet.jsp.jstl-1.2.1.jar"/>
    <copy file="${basedir}/../../Downloads/javax.servlet.jsp.jstl-api-1.2.1.jar" tofile="${artifact.output.lda-exp}/WEB-INF/lib/javax.servlet.jsp.jstl-api-1.2.1.jar"/>
    <copy file="${basedir}/lib/hibernate-core-4.2.2.Final.jar" tofile="${artifact.output.lda-exp}/WEB-INF/lib/hibernate-core-4.2.2.Final.jar"/>
    <copy file="${basedir}/lib/hibernate-jpa-2.0-api-1.0.1.Final.jar" tofile="${artifact.output.lda-exp}/WEB-INF/lib/hibernate-jpa-2.0-api-1.0.1.Final.jar"/>
    <copy file="${basedir}/lib/hibernate-commons-annotations-4.0.2.Final.jar" tofile="${artifact.output.lda-exp}/WEB-INF/lib/hibernate-commons-annotations-4.0.2.Final.jar"/>
    <copy file="${basedir}/lib/antlr-2.7.7.jar" tofile="${artifact.output.lda-exp}/WEB-INF/lib/antlr-2.7.7.jar"/>
    <copy file="${basedir}/lib/dom4j-1.6.1.jar" tofile="${artifact.output.lda-exp}/WEB-INF/lib/dom4j-1.6.1.jar"/>
    <copy file="${basedir}/lib/javassist-3.15.0-GA.jar" tofile="${artifact.output.lda-exp}/WEB-INF/lib/javassist-3.15.0-GA.jar"/>
    <copy file="${basedir}/lib/jboss-logging-3.1.0.GA.jar" tofile="${artifact.output.lda-exp}/WEB-INF/lib/jboss-logging-3.1.0.GA.jar"/>
    <copy file="${basedir}/lib/jboss-transaction-api_1.1_spec-1.0.1.Final.jar" tofile="${artifact.output.lda-exp}/WEB-INF/lib/jboss-transaction-api_1.1_spec-1.0.1.Final.jar"/>
    <copy todir="${artifact.output.lda-exp}">
      <fileset dir="${basedir}/web"/>
    </copy>
    <mkdir dir="${artifact.output.lda-exp}/WEB-INF"/>
    <copy file="${basedir}/web/WEB-INF/web.xml" tofile="${artifact.output.lda-exp}/WEB-INF/web.xml"/>
