  <target name="artifact.lda-war" depends="init.artifacts, artifact.lda-exp" description="Build &#39;lda-war&#39; artifact">
    <property name="artifact.temp.output.lda-war" value="${artifacts.temp.dir}/lda_war"/>
    <mkdir dir="${artifact.temp.output.lda-war}"/>
    <zip destfile="${temp.jar.path.lda##010.war}">
      <zipfileset dir="${artifact.output.lda-exp}"/>
      <zipfileset file="${basedir}/../../Downloads/commons-logging-1.1.3/commons-logging-1.1.3.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/../../Downloads/javax.servlet.jsp.jstl-1.2.1.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/../../Downloads/javax.servlet.jsp.jstl-api-1.2.1.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/hibernate-core-4.2.2.Final.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/hibernate-jpa-2.0-api-1.0.1.Final.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/hibernate-commons-annotations-4.0.2.Final.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/antlr-2.7.7.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/dom4j-1.6.1.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/javassist-3.15.0-GA.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/jboss-logging-3.1.0.GA.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/jboss-transaction-api_1.1_spec-1.0.1.Final.jar" prefix="WEB-INF/lib"/>
    </zip>
    <copy file="${temp.jar.path.lda##010.war}" tofile="${artifact.temp.output.lda-war}/lda##010.war"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.lda-exp, artifact.lda-war" description="Build all artifacts">
    <mkdir dir="${artifact.output.lda-war}"/>
    <copy todir="${artifact.output.lda-war}">
      <fileset dir="${artifact.temp.output.lda-war}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>